@model StockSystem.Models.Category

<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Edit Category</h4>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

</div>

@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.ValidationSummary(true, "Please fix the errors below.")

            <div class="form-group col-sm-6">
                @Html.LabelFor(c => c.CategoryName)
                @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control"})
                @Html.ValidationMessageFor(c => c.CategoryName)
            </div>

            <div class="form-group col-sm-6">
                @Html.LabelFor(c => c.CategoryDescription)
                @Html.TextBoxFor(c => c.CategoryDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.CategoryDescription)
            </div>           

        @Html.HiddenFor(c => c.Id)
        @Html.AntiForgeryToken()

    </div>

    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}




