@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> List of Products
    </div>
    <div class="card-block">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" id="dt" cellspacing="0">
                <thead>
                    <tr>
                        <th>Reference ID</th>
                        <th>Category</th>
                        <th>Item Name</th>
                        <th>Item Unit</th>
                        <th>Stock Level</th>
                        <th>Unit Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section scripts
    {
    <script type="text/javascript" src="~/Scripts/Product/LoadProductDataTable.js"></script>
    <script type="text/javascript" src="~/Scripts/Product/modalform.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

}




